# --- Telegram ---
# Comma-separated list of 4 persona bot tokens (Alpha-001, Beta-002, Gamma-003, Delta-004)
TELEGRAM_BOT_TOKENS=bot_token_alpha,bot_token_beta,bot_token_gamma,bot_token_delta
# Judge bot (Relogic-001) token; MUST be admin in your supergroup
TELEGRAM_JUDGE_TOKEN=bot_token_judge

# --- LLM Providers ---
# Groq API key for persona responses
GROQ_API_KEY=your_groq_api_key
# Gemini API key for judge summaries
GEMINI_API_KEY=your_gemini_api_key

# --- Database (Supabase Postgres) ---
# Set to your Supabase connection string (TLS required)
# Example: postgresql://postgres:<PASSWORD>@db.<PROJECT>.supabase.co:5432/postgres?sslmode=require
DATABASE_URL=postgresql://postgres:password@db.PROJECT.supabase.co:5432/postgres?sslmode=require

# --- Debate runtime knobs (defaults are fine) ---
DEBATE_CADENCE_SECONDS=120
BOT_MESSAGE_MAX_TOKENS=120
BOT_CONTEXT_TURNS=4
JUDGE_SUMMARY_EVERY_TURNS=2
JUDGE_SUMMARY_MAX_TOKENS=120
# +08:00 => 480 minutes; used by daily scheduler
TZ_OFFSET_MINUTES=480

# --- Advanced (optional) ---
# Log token usage for Groq and Gemini (if available)
LOG_TOKEN_USAGE=0
# Use stop sequences to prevent echoing persona labels (1 to enable, 0 to disable)
GROQ_USE_STOP=1
# Global fallback temperature if persona.temperature not set in config/personas.yaml
BOT_TEMPERATURE=0.6
